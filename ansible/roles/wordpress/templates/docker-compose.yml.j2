version: '3.3'

services:
  db:
    image: mysql:5.7
    volumes:
      - db_data:/var/lib/mysql
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: 2xeQwH3sscVussWzbNL
      MYSQL_USER: wordpress
      MYSQL_DATABASE: wordpress
      MYSQL_PASSWORD: tBFybVU6pzr4wzBXRJA

  wordpress:
    depends_on:
      - db
    image: wordpress:latest
    ports:
      - "{{ wordpress_insecure_public_port }}:80"
    restart: always
    environment:
      WORDPRESS_DB_HOST: db:3306
      WORDPRESS_DB_USER: wordpress
      WORDPRESS_DB_NAME: wordpress
      WORDPRESS_DB_PASSWORD: tBFybVU6pzr4wzBXRJA
volumes:
  db_data: {}
